@model LogUser
<fieldset class="col-5 border border-dark p-5">
    <legend class="mb-5">Login</legend>
    <form asp-action="LoginUser" asp-controller="User" method="POST" class="d-flex flex-column">
        <div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <label asp-for="LogEmail" class="form-label"></label>
                <input asp-for="LogEmail" class="form-control w-75">
            </div>
            <span class="text-danger" asp-validation-for="LogEmail"></span>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <label asp-for="LogPassword" class="form-label"></label>
                <input asp-for="LogPassword" class="form-control w-75">
            </div>
            <span class="text-danger" asp-validation-for="LogPassword"></span>
        </div>
        </br>
        <button class="btn btn-primary align-self-start">Login</button>
    </form>
</fieldset>